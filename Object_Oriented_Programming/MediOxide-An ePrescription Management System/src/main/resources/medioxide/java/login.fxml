<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="800.0" styleClass="boxOne" stylesheets="@style/dashboard.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="medioxide.controller.LoginController">
    <children>
        <VBox fx:id="loginVBox" layoutX="525.0" prefHeight="450.0" prefWidth="275.0" spacing="20.0" styleClass="topAddPane" stylesheets="@style/patients.css">
            <children>
                <Region fx:id="signinPicture" prefHeight="166.0" prefWidth="250.0" stylesheets="@style/patients.css" />
                <Label fx:id="loginMessage" alignment="CENTER" prefHeight="17.0" prefWidth="246.0" text="Welcome Back Admin..!" textAlignment="CENTER" textFill="YELLOW">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <opaqueInsets>
                        <Insets bottom="-100.0" top="-5.0" />
                    </opaqueInsets>
                </Label>
                <TextField fx:id="userNameField" focusTraversable="false" layoutX="600.0" prefHeight="40.0" prefWidth="250.0" promptText="Username" style="-fx-background-radius: 30;">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </TextField>
                <PasswordField fx:id="passwordField" prefHeight="40.0" prefWidth="250.0" promptText="Password" style="-fx-background-radius: 30;" />
                <HBox alignment="TOP_CENTER" prefHeight="0.0" prefWidth="275.0" spacing="20.0" style="-fx-background-radius: 30;">
                    <children>
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButton" prefHeight="30.0" prefWidth="60.0" style="-fx-background-radius: 30; -fx-background-color: green;" styleClass="signInButtonColor" text="Cancel" textFill="#020e40">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                        <Button fx:id="signinButton" layoutX="600.0" mnemonicParsing="false" onAction="#submitButton" prefHeight="30.0" prefWidth="60.0" style="-fx-background-radius: 30; -fx-background-color: green;" styleClass="signInButtonColor" text="Signin" textFill="#020e40">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
                <Button fx:id="createNewAccount" layoutX="30.0" layoutY="30.0" mnemonicParsing="false" onAction="#createNewAccount" prefHeight="30.0" prefWidth="180.0" style="-fx-background-radius: 5; -fx-background-color: green;" styleClass="signInButtonColor" text="Create New Account" textAlignment="CENTER" textFill="#020e40">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="50.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
